//짝수들만 출력하여 총합구하기

function runContinue(){
    var k = 0
    for (var i=1; i<=10; i++){
        if (i % 2 == 1){ // 짝수인지 홀수인지 판단하려고, i를 2로 나누었을때 나머지가 1과 같은지, 1이면 홀수로 넘김 
            continue;    
        }else{
            k = k + i;   
        }
        alert(k); // 그떄 그때 나오는 값을 경고창으로 띄워주기
    }
    console.log(k); 
}


