// *break 

function forBreak(){
    for (var i=1; i<=10; i++){
        break; // 아래를 실행시키지 않고 바로 멈춤.
        console.log(i);
    }
    console.log(i);  // for문을 돌지 않았기때문에 i=1 이 나옴
}


//
function runBreak(){
    //confirm(); // 확인 취소 나옴 / 확인이면 ture, 취소면 false
    alert('0번째 반복문');
    for( var i=1; i>0; i++){ //무한루프를 만들어야 함.
        //console.log(i);
        if (confirm('계속할래?') == true){   // 컨펌창을 띄우고 물어봐야함.  
            
            alert( i+'번째 반복문' ); // 경고창으로 띄움 

        }else{
            break;     // 그렇지 않으면 그만
        }
    }
}




function addtodo(){
    for (var k=1; k<=10; k++) {

        for (var i=1; i<=k; i++){
            document.write(i+'<br/>');
        }

        // document.write(k + '<br/>');
    }

}



let fruitsBasket = ['사과','감','감','배','포도','포도','딸기','포도','감','수박','딸기']

function countFruit(name){
    let count=0;
    fot (let i=0; i<fruitsBasket.length; i++){
        let fruit = fruitsBasket[i];
        if(fruit == name){
            count += 1;
        }
    }
    return count;
} --무슨말인지 물어보기 -- 
