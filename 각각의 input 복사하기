<script>
// "복사" 버튼 클릭 시 해당 URL 값을 복사하는 함수
function copyURL() {
    // 버튼을 클릭한 요소를 찾습니다.
    var button = event.target;
    // console.log(button.parentNode.previousSibling)
    // console.log(button.parentNode.previousElementSibling)
    // 버튼과 동일한 레벨에 있는 참조된 URL 입력 요소를 찾습니다.
    var urlInputElement = button.parentNode.previousElementSibling.querySelector(".urlInput");
    // console.log(urlInputElement)

    // 찾은 요소의 값을 복사합니다.
    urlInputElement.select();
    document.execCommand("copy");
}

// 모든 "복사" 버튼 요소를 선택합니다.
var copyButtons = document.querySelectorAll(".copy_btn");

// 각각의 "복사" 버튼에 이벤트 리스너를 추가합니다.
for (var i = 0; i < copyButtons.length; i++) {
    copyButtons[i].addEventListener("click", copyURL);
}




</script>
