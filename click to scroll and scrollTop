script

$('.con01_link').click(function(e){
    e.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top},500);
});

$('.con05_link').click(function(e){
    e.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top},500);
});

html

<div class="con01" id="con01">
